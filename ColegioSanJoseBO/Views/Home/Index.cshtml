@model DASALUD.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard - Colegio San José";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1>@Model.WelcomeMessage, @Model.TeacherName</h1>
        <p>Panel de administración académica</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-card-header">
                <div class="stat-icon">
                    <i class="bi bi-people-fill"></i>
                </div>
                <div class="stat-info">
                    <h3>Total Estudiantes</h3>
                </div>
            </div>
            <p class="stat-value">@Model.TotalStudents</p>
            <p class="stat-label">Estudiantes registrados</p>
        </div>

        <div class="stat-card">
            <div class="stat-card-header">
                <div class="stat-icon">
                    <i class="bi bi-person-workspace"></i>
                </div>
                <div class="stat-info">
                    <h3>Total Maestros</h3>
                </div>
            </div>
            <p class="stat-value">@Model.TotalTeachers</p>
            <p class="stat-label">Docentes activos</p>
        </div>

        <div class="stat-card">
            <div class="stat-card-header">
                <div class="stat-icon">
                    <i class="bi bi-book-fill"></i>
                </div>
                <div class="stat-info">
                    <h3>Total Materias</h3>
                </div>
            </div>
            <p class="stat-value">@Model.TotalSubjects</p>
            <p class="stat-label">Materias disponibles</p>
        </div>

        <div class="stat-card">
            <div class="stat-card-header">
                <div class="stat-icon">
                    <i class="bi bi-graph-up"></i>
                </div>
                <div class="stat-info">
                    <h3>Promedio Global</h3>
                </div>
            </div>
            <p class="stat-value">@Model.AverageGlobalGrade.ToString("F1")</p>
            <p class="stat-label">Calificación promedio</p>
        </div>
    </div>

    <div class="charts-section">
        <div class="chart-card">
            <h3>Top 5 Estudiantes</h3>
            <div class="chart-container">
                <canvas id="topStudentsChart"></canvas>
            </div>
        </div>

        <div class="chart-card">
            <h3>Promedios por Materia</h3>
            <div class="chart-container">
                <canvas id="subjectsAverageChart"></canvas>
            </div>
        </div>
    </div>

                        

    <div class="top-students-section">
        <h3>Estadísticas por Materia</h3>
        @if (Model.SubjectStatistics.Any())
        {
            <div class="subjects-grid">
                @foreach (var subject in Model.SubjectStatistics)
                {
                    <div class="subject-card">
                        <div class="subject-header">
                            <div>
                                <span class="subject-code">@subject.SubjectCode</span>
                                <h4 class="subject-name">@subject.SubjectName</h4>
                                <p class="subject-teacher">@subject.TeacherName</p>
                            </div>
                        </div>
                        <div class="subject-stats">
                            <div class="subject-stat-item">
                                <span class="subject-stat-value">@subject.EnrolledStudents</span>
                                <span class="subject-stat-label">Estudiantes</span>
                            </div>
                            <div class="subject-stat-item">
                                <span class="subject-stat-value">@subject.AverageGrade.ToString("F1")</span>
                                <span class="subject-stat-label">Promedio</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-inbox"></i>
                </div>
                <h4>No hay materias disponibles</h4>
                <p>Aún no se han registrado materias en el sistema.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    
    <script>
        const topStudentsData = @Html.Raw(Json.Serialize(Model.TopStudents));
        const subjectStatisticsData = @Html.Raw(Json.Serialize(Model.SubjectStatistics));

        const primaryColor = '#005792';
        const secondaryColor = '#003d66';
        const successColor = '#28a745';
        const warningColor = '#ffc107';
        const infoColor = '#17a2b8';

        if (topStudentsData.length > 0) {
            const ctx1 = document.getElementById('topStudentsChart').getContext('2d');
            new Chart(ctx1, {
                type: 'bar',
                data: {
                    labels: topStudentsData.map(s => s.studentName + ' ' + s.studentSurname),
                    datasets: [{
                        label: 'Promedio',
                        data: topStudentsData.map(s => s.averageGrade),
                        backgroundColor: [
                            'rgba(255, 215, 0, 0.7)',
                            'rgba(192, 192, 192, 0.7)',
                            'rgba(205, 127, 50, 0.7)',
                            'rgba(0, 87, 146, 0.7)',
                            'rgba(0, 61, 102, 0.7)'
                        ],
                        borderColor: [
                            'rgba(255, 215, 0, 1)',
                            'rgba(192, 192, 192, 1)',
                            'rgba(205, 127, 50, 1)',
                            'rgba(0, 87, 146, 1)',
                            'rgba(0, 61, 102, 1)'
                        ],
                        borderWidth: 2,
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            titleFont: {
                                size: 14,
                                weight: 'bold'
                            },
                            bodyFont: {
                                size: 13
                            },
                            callbacks: {
                                label: function(context) {
                                    return 'Promedio: ' + context.parsed.y.toFixed(1);
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 10,
                            ticks: {
                                font: {
                                    size: 12
                                },
                                stepSize: 1
                            },
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            ticks: {
                                font: {
                                    size: 11
                                }
                            },
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        }

        if (subjectStatisticsData.length > 0) {
            const ctx2 = document.getElementById('subjectsAverageChart').getContext('2d');
            new Chart(ctx2, {
                type: 'doughnut',
                data: {
                    labels: subjectStatisticsData.map(s => s.subjectCode),
                    datasets: [{
                        label: 'Promedio',
                        data: subjectStatisticsData.map(s => s.averageGrade),
                        backgroundColor: [
                            'rgba(0, 87, 146, 0.8)',
                            'rgba(0, 61, 102, 0.8)',
                            'rgba(23, 162, 184, 0.8)',
                            'rgba(40, 167, 69, 0.8)',
                            'rgba(255, 193, 7, 0.8)',
                            'rgba(220, 53, 69, 0.8)'
                        ],
                        borderColor: 'white',
                        borderWidth: 3
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                font: {
                                    size: 12
                                },
                                padding: 15,
                                usePointStyle: true,
                                pointStyle: 'circle'
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            titleFont: {
                                size: 14,
                                weight: 'bold'
                            },
                            bodyFont: {
                                size: 13
                            },
                            callbacks: {
                                label: function(context) {
                                    const subject = subjectStatisticsData[context.dataIndex];
                                    return [
                                        subject.subjectName,
                                        'Promedio: ' + context.parsed.toFixed(1),
                                        'Estudiantes: ' + subject.enrolledStudents
                                    ];
                                }
                            }
                        }
                    }
                }
            });
        }
    </script>
}

@model List<DASALUD.ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "Estudiantes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Estudiantes</h2>
    <a asp-action="Create" class="btn btn-primary">Nuevo Estudiante</a>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Grado</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Edad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        var age = DateTime.Now.Year - student.BirthDate.Year;
                        <tr>
                            <td><strong>@student.FullName</strong></td>
                            <td>@student.Degree</td>
                            <td>@student.BirthDate.ToString("dd/MM/yyyy")</td>
                            <td>@age años</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-info">Ver</a>
                                <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        No hay estudiantes registrados. <a asp-action="Create">Crear el primer estudiante</a>.
    </div>
}
